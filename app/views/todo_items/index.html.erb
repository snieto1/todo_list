

<p id="notice"><%= notice %></p>

<h1>
  <span class="glyphicon glyphicon-bitcoin" aria-hidden="true"></span>
  To-do-List
  <span class="glyphicon glyphicon-bitcoin" aria-hidden="true"></span></h1>

<table class="table table-bordered" id="background">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item, class: "btn btn-info show"%></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo Item', new_todo_item_path, class: "new_todo"%>
